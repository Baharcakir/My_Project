<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SynonymAntonym">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/synonymButton"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginStart="64dp"
            android:gravity="center"
            android:text="Eş Anlamlı Kelimeler Quiz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/antonymButton"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/antonymButton"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:layout_marginTop="308dp"
            android:gravity="center"
            android:text="Zıt Anlamlı Kelimeler Quiz"
            app:layout_constraintEnd_toEndOf="@+id/synonymButton"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>